<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"
        android:text="Value"
        app:layout_constraintBottom_toTopOf="@+id/volumedown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IPAddress" />

    <Button
        android:id="@+id/volumeup"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="Vol UP"
        app:layout_constraintBaseline_toBaselineOf="@+id/volumedown"
        app:layout_constraintEnd_toStartOf="@+id/volumedown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/volumedown"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:text="Vol Down"
        app:layout_constraintBottom_toTopOf="@+id/bassdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/volumeup"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/bassup"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="Bass UP"
        app:layout_constraintBottom_toTopOf="@+id/aux1"
        app:layout_constraintEnd_toStartOf="@+id/bassdown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bassdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="Bass DOWN"
        app:layout_constraintBottom_toTopOf="@+id/aux1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bassup"
        app:layout_constraintTop_toBottomOf="@+id/volumedown" />

    <RadioButton
        android:id="@+id/aux1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUX 1"
        app:layout_constraintBottom_toTopOf="@+id/aux3"
        app:layout_constraintEnd_toStartOf="@+id/aux2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bassdown" />

    <RadioButton
        android:id="@+id/aux2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="AUX 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aux3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/aux1" />

    <RadioButton
        android:id="@+id/aux3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="AUX 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/aux2"
        app:layout_constraintTop_toBottomOf="@+id/aux1" />

    <EditText
        android:id="@+id/IPAddress"
        android:layout_width="182dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="30dp"
        android:text="IPAddress"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>